@model List<Nix_Hotel.WEB.Models.RoomModel>

@{
    ViewBag.Title = "ViewAll";
}

<h2>Rooms</h2>

<p>
    @Html.ActionLink("Rooms Home page", "Index") |
    @Html.ActionLink("Create New", "Add")
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Category.Beds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Category.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>
                    @room.Name
                </td>
                <td>
                    @room.Category.Name
                </td>
                <td>
                    @room.Category.Beds
                </td>
                <td>
                    @room.Category.Price
                </td>
                <td>
                    @room.Active
                </td>
                <td>
                    @Html.ActionLink("View", "View", new { id = room.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = room.Id })
                </td>
            </tr>
        }
    </tbody>
</table>